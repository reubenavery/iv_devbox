NameVirtualHost *:80

<% if File.exists?('/opt/ivillage/vishnu') -%>
<VirtualHost *:80>
    ServerName local.ivillage.com
    DocumentRoot "/opt/ivillage/vishnu"

    <Directory "/opt/ivillage/vishnu">
        Options Indexes FollowSymLinks MultiViews
        AllowOverride All
        Order allow,deny
        Allow from all
    </Directory>

</VirtualHost>
<% end-%>

